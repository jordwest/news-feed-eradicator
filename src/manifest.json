{
	"name": "News Feed Eradicator for Facebook",
	"version": "1.3.1",
	"description": "Find yourself spending too much time on Facebook? Eradicate distractions by replacing your entire news feed with an inspiring quote",
	"manifest_version": 2,
	"permissions": [
		"storage",
		"http://www.facebook.com/*",
		"https://www.facebook.com/*",
		"http://web.facebook.com/*",
		"https://web.facebook.com/*"
	],
	"background": {
		"page": "background.html"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true,
		"browser_style": true,
		"chrome_style": true
	},
	"icons": {
		"16": "icon16.jpg",
		"48": "icon48.jpg",
		"128": "icon128.jpg"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "@news-feed-eradicator"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"http://www.facebook.com/*",
				"https://www.facebook.com/*",
				"http://web.facebook.com/*",
				"https://web.facebook.com/*"
			],
			"js": ["intercept.js"],
			"css": ["eradicate.css"],
			"run_at": "document_start"
		},
		{
			"matches": [
				"http://www.facebook.com/*",
				"https://www.facebook.com/*",
				"http://web.facebook.com/*",
				"https://web.facebook.com/*"
			],
			"js": ["eradicate.js"],
			"css": ["eradicate.css"],
			"run_at": "document_idle"
		}
	]
}
