{
	schemaVersion: 1,
	sites: [
		{
			id: 'reddit-old',
			title: "Old Reddit",
			hosts: ['old.reddit.com'],
			feed: {
				selectors: ['#siteTable'],
				path: ['/', '/new', '/rising', '/controversial', '/top', '/r/popular', '/r/all'],
				insertAt: 'before',
			},
			styles: [
				{
					id: 'sidebar',
					title: 'Sidebar',
					type: 'hide',
					selectors: ['div.side'],
				}
			]
		},
		{
			id: 'youtube',
			title: 'YouTube',
			hosts: ['www.youtube.com', 'youtube.com'],
			feed: {
				selectors: ['ytd-browse'],
				paths: ['/'],
				insertAt: 'overlay-fixed',
				overlayZIndex: 2019,
			},
			styles: [
				{
					id: 'sidebar',
					title: 'Related videos sidebar',
					type: 'hide',
					selectors: ['ytd-watch-next-secondary-results-renderer'],
				},
				{
					id: 'comments',
					title: 'Video comments',
					type: 'hide',
					selectors: ['ytd-comments'],
				},
				{
					id: 'shorts-button',
					title: 'Shorts button',
					type: 'remove',
					selectors: ['ytd-guide-entry-renderer:has(a[title="Shorts"])'],
				},
				{
					id: 'explore-nav',
					title: 'Explore navigation menu',
					type: 'remove',
					selectors: ['ytd-guide-section-renderer:nth-child(4)']
				}
			]
		},
		{
			id: 'twitter-x',
			title: 'Twitter/X',
			hosts: ['x.com'],
			feed: {
				selectors: ['div[aria-label="Home timeline"] > div > section[role="region"]'],
				insertAt: 'overlay',
			},
			styles: []
		}
	]
}
