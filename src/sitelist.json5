{
	schemaVersion: 1,
	sites: [
		{
			id: 'reddit-old',
			title: "Old Reddit",
			hosts: ['old.reddit.com'],
			feed: {
				selectors: ['#siteTable'],
				insertAt: 'before',
			},
			styles: [
				{
					id: 'sidebar',
					title: 'Sidebar',
					type: 'hide',
					selectors: ['div.side'],
				}
			]
		},
		{
			id: 'youtube',
			title: 'YouTube',
			hosts: ['www.youtube.com', 'youtube.com'],
			feed: {
				selectors: ['ytd-browse'],
				insertAt: 'overlay-fixed',
			},
			styles: [
				{
					id: 'sidebar',
					title: 'Related videos sidebar',
					type: 'hide',
					selectors: ['ytd-watch-next-secondary-results-renderer'],
				},
				{
					id: 'comments',
					title: 'Video comments',
					type: 'hide',
					selectors: ['ytd-comments'],
				}
			]
		},
		{
			id: 'twitter-x',
			title: 'Twitter/X',
			hosts: ['x.com'],
			feed: {
				selectors: ['div[aria-label="Home timeline"] > div > section[role="region"]'],
				insertAt: 'overlay',
			},
			styles: []
		}
	]
}
